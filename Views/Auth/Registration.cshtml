@model LostAndFound.Models.UserFullView

@{
    ViewBag.Title = "Registration";
}

<h2>Registration</h2>
@Html.ValidationSummary(true)
@using (Html.BeginForm())
{

    @Html.ValidationSummary(true)
    @Html.LabelFor(u=>u.uli_cl.username)<br />
    @Html.TextBoxFor(u => u.uli_cl.username)<br />
    @Html.LabelFor(u => u.uli_cl.password)<br />
    @Html.PasswordFor(u => u.uli_cl.password)<br />
    @Html.LabelFor(u => u.ubi_cl.userFullName)<br />
    @Html.TextBoxFor(u => u.ubi_cl.userFullName)<br />
    @Html.LabelFor(u => u.ubi_cl.lostAndFoundRoles.roleName)<br />
    @Html.DropDownListFor(u=>u.ubi_cl.lostAndFoundRoles.roleName, new SelectList(ViewBag.availableRolesNames, "roleName", "roleName"))<br />
    @Html.LabelFor(u => u.ubi_cl.clientBasicInfo.clientName)<br />
    @Html.DropDownListFor(u=>u.ubi_cl.clientBasicInfo.clientName, new SelectList(ViewBag.availableClientsNames, "clientName", "clientName"))<br />
    @Html.AntiForgeryToken()
    <br />
    <p>
        <button type="submit">Register</button>
    </p>
}